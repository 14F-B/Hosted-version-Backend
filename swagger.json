                      "example": "johndoe@example.com"
                    },
                    "password": {
                      "type": "string",
                      "description": "User password",
                      "example": "mypassword"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Sikeres bejelentkezés",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "name": {
                          "type": "string"
                        },
                        "password": {
                          "type": "string"
                        },
                        "gender": {
                          "type": "string"
                        },
                        "permission": {
                          "type": "string"
                        },
                        "birthdate": {
                          "type": "string",
                          "format": "date-time"
                        },
                        "email": {
                          "type": "string",
                          "format": "email"
                        },
                        "nationality": {
                          "type": "string"
                        }
                      }
                  }
                }
              }
            },
            "401": {
              "description": "Helytelen belépési adatok",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string",
                        "description": "Error message",
                        "example": "Érvénytelen email vagy jelszó"
                      },
                      "email": {
                        "type": "string",
                        "description": "User email",
                        "example": "johndoe@example.com"
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Szerver hiba!",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string",
                        "description": "Error message",
                        "example": "An error occurred while processing your request."
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      
      "/docs/applyToLocation": {
        "post": {
          "tags": [
            "Apply / Cancel application"
          ],
          "summary": "Jelentkezés egy eseményre",
          "description": "Jelentkezési szándék leadása.",
          "security": [
            {
              "JWT": []
            }
          ],
          "produces": [
            "application/json"
          ],
          "consumes": [
            "application/json"
          ],
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "description": "Esemény és felhasználó adatai",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "locationId": {
                    "type": "integer",
                    "description": "ID of the location to apply to.",
                    "example": 123
                  },
                  "userId": {
                    "type": "integer",
                    "description": "ID of the user applying.",
                    "example": 456
                  },
                  "eventId": {
                    "type": "integer",
                    "description": "ID of the event for which the user is applying.",
                    "example": 789
                  },
                  "userBirthday": {
                    "type": "string",
                    "format": "date",
                    "description": "Birthday of the user applying.",
                    "example": "1990-01-01"
                  },
                  "eventDate": {
                    "type": "string",
                    "format": "date",
                    "description": "Date of the event for which the user is applying.",
                    "example": "2023-07-01"
                  },
                  "agelimit": {
                    "type": "integer",
                    "description": "Minimum age required to apply to the event.",
                    "example": 18
                  },
                  "userEmail": {
                    "type": "string",
                    "description": "Email of the user applying.",
                    "example": "johndoe@example.com"
                  }
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Sikeres jelentkezés!",
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "description": "A success message."
                  }
                }
              }
            },
            "400": {
              "description": "Hibás kérés!",
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "description": "A description of the error."
                  }
                }
              }
            }
          }
        }
      },
        "/docs/cancelApplication": {
          "post": {
            "tags": [
              "Apply / Cancel application"
            ],
            "summary": "Visszamondás",
            "description": "Esemény részvétel lemondása.",        
            "security": [
              {
                "JWT": []
              }
            ],
            "requestBody": {
              "description": "Lemondáshoz szükséges adatok",
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "locationId": {
                        "type": "integer",
                        "description": "The ID of the location where the user has applied"
                      },
                      "userId": {
                        "type": "integer",
                        "description": "The ID of the user who has applied"
                      },
                      "eventId": {
                        "type": "integer",
                        "description": "The ID of the event the user has applied to"
                      },
                      "userEmail": {
                        "type": "string",
                        "description": "The email of the user who has applied"
                      }
                    },
                    "required": [
                      "locationId",
                      "userID",
                      "eventId",
                      "userEmail"
                    ]
                  }
                }
              }
            },
            "responses": {
              "200": {
                "description": "Jelentkezés visszamondva!"
              },
              "401": {
                "description": "Unauthorized"
              },
              "500": {
                "description": "Szerver hiba!"
              }
            }
          }
      },
      "/docs/forgotpassword": {
        "put": {
          "tags": [
            "Authentication"
          ],
          "summary": "Elfelejtett jelszó",
