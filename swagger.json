{
    "openapi": "3.0.0",
    "info": {
      "version": "3.0.0",
      "title": "GO EVENT!  -  API Service",
      "description": "<img alt='Database Relation model' src='https://raw.githubusercontent.com/CsizmaziaAdam/CsizmaziaAdam.github.io/main/DatabaseModellVegso.png' >"
