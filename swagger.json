                "application/json": {
                  "schema": {
                    "type": "object",
                      "properties": {
                        "message": {
                          "type": "string"
                        },
                        "code": {
                          "type": "integer"
                        }
                      }
                  }
                }
              }
            }
          }
        }
      },
      "/docs/signup": {
        "post": {
