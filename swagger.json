              }
            },
            "400": {
              "description": "Bad Request",
              "content": {
                "text/plain": {
                  "schema": {
                    "type": "string",
                    "description": "Az adott e-mail cím nem található az adatbázisban."
                  }
                }
              }
            },
            "500": {
              "description": "Szerver hiba!",
              "content": {
                "text/plain": {
                  "schema": {
                    "type": "string",
                    "description": "Szerverhiba"
                  }
                }
              }
            }
          }
