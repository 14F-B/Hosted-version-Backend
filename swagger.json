                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string"
                      }
                    }                  
                  }
                }
              }
            },
            "400": {
              "description": "Hibás kérés",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "409": {
              "description": "Conflict / Ütközés",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Szerver hiba!",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                      "properties": {
                        "message": {
                          "type": "string"
                        }
                      }
                  }
                }
              }
            }
          }
        }
      },
      "/docs/newadmin": {
        "post": {
          "tags": [
