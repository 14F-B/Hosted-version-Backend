      "application/json"
    ],
    "paths": {
      "/docs/allusers": {
        "get": {
          "summary": "Összes felhasználó",
          "description": "Visszaadja az adatbázisban szereplő fehasználók összes adatát admin jogosultság során.",
          "tags": [
            "User process"
          ],
          "security": [
            {
              "JWT": []
            }
          ],

          "responses": {
            "200": {
              "description": "Felhasználók listája",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "name": {
                          "type": "string"
                        },
                        "password": {
                          "type": "string"
                        },
                        "gender": {
                          "type": "string"
                        },
                        "permission": {
                          "type": "string"
                        },
                        "birthdate": {
                          "type": "string",
                          "format": "date-time"
                        },
                        "email": {
                          "type": "string",
                          "format": "email"
                        },
                        "nationality": {
                          "type": "string"
                        }
                      }
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized"
            },
            "500": {
              "description": "Szerver hiba!"
            }
          }
        }
      },
      "/docs/allevents": {
        "get": {
          "summary": "Összes esemény",
          "description": "Az összes rögzített eseményt visszaadja az adatbázisból, ami a lekérdezés pillanatában még nem kezdődött el.",
          "tags": [
            "Event informations"
          ],
          "responses": {
            "200": {
              "description": "Az események listája",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Eventproperties"
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Szerver hiba!"
            }
          }
        }
      },
      "/docs/nextevent": {
        "get": {
          "summary": "Következő esemény",
          "description": "Visszaadja a következő esemény fő adatait.",
          "tags": [
            "Event informations"
          ],
          "responses": {
            "200": {
              "description": "A következő esemény részletei",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "date": {
                            "type": "string",
                            "format": "date-time"
                          },
                          "city": {
                            "type": "string"
                          },
                          "street": {
                            "type": "string"
                          },
                          "house_number": {
                            "type": "string"
                          }
                        }
                      }
                  }
                }
              }
            },
            "500": {
              "description": "Szerver hiba!"
            }
          }
        }
      },

      "/docs/eventcategory/{categories}": {
        "get": {
          "summary": "Az események kategóriák szerinti szűrése",
          "description": "Visszaadja az összes eseményt a megadott kategóriák alapján szűrve.",
          "tags": [
            "Event informations"
          ],
          "parameters": [
            {
              "name": "categories",
              "in": "path",
              "description": "Keresés az esemény kategóriákra",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Sikeres lekérdezés",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Eventproperties"
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Hiba az adatok letöltése során! (Adatbázis hiba)",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/docs/archive": {
        "get": {
          "summary": "Archívum",
          "description": "Korábbi események listája",
          "tags": [
            "Event informations"
          ],
          "responses": {
            "200": {
              "description": "Sikeres lekérdezés",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
